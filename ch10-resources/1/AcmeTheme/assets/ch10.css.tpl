form~.success {
  text-align: left;
  background: #d4edda;
  margin: 0;
  padding: 20px;
  color: #155724;
}

form~.error {
  text-align: left;
  background: #f8d7da;
  margin: 0;
  padding: 20px;
  color: #721c24;
}

#search {
  float: right;
  padding: 25px;
}

#search div {
  position: absolute;
  top: 60px;
  background: white;
  text-transform: none;
  border: 1px solid #ddd;
}

#search div a {
  display: block;
}

.editor .layout-main {
  top: 80px !important;
}

.editor footer {
  display: none;
}

.editor .debug {
  display: none;
}

.editor * {
  text-shadow: none;
}

.editor header input {
  border: 1px solid #eee;
  border-radius: 0;
  min-height: 35px;
  margin-bottom: 30px;
  width: 100%;
  padding: 0;
  text-shadow: 2px 2px 2px #ddd;
}

.editor input,
.editor textarea,
.editor select,
.editor button {
  border: auto;
  border-radius: 0;
  min-height: auto;
  margin-bottom: 0;
  width: auto;
  padding: 0;
  text-shadow: none;
}
